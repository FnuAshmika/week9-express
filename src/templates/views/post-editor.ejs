<%- include('../partials/header-dark.ejs') %>

<main class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card mt-5">
                <div class="card-body">
                    <h1>Create a Post</h1>
                </div>
            </div>
            <form action="/post/create" method="POST">
                <div class="card mt-4" data-question="${i}">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="postTitle">
                                Post Title
                            </label>
                            <input type="text" name="postTitle" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="postDescription">
                                Post Description
                            </label>
                            <input type="text" name="postDescription" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="card mt-4">
                    <div class="card-body">
                        <button class="form-control btn btn-primary btn-block" type="submit">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>


<%- include('../partials/footer.ejs') %>